@model NewEmployee
@{
    ViewData["Title"]="Login";
}


<!DOCTYPE html>
<html>
<head>
<style>

.login{
    width: 15em;
    height: 25em;
    background-color: rgb(31, 30, 30);
    border-color: black;
    border-radius: 3em;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin-left: auto;
    margin-right: auto;
   box-shadow: 20px 20px 50px black;
   
}


button {
  background-color: #24cee4;
  color: white;
  padding: 5px 5px;
  margin: 5px 0;
  border: none;
  cursor: pointer;
  border-radius: 20px;
  width: 50%;
  transition-duration: 0.2s;
}

button:hover {
  opacity: 1;
  background-color: #1df16e;
}


.imgcontainer {
  text-align: center;
  margin: 50px 0 25px 0;
}

img.avatar {
  width: 50%;
  border-radius: 50%;
}

.container {
  padding: 16px;
}

span.psw {
  float: right;
  padding-top: 16px;
}

.textbox{
 width: 50%;
 height: 25%;
 border-radius: 10%;
}

</style>
</head>


<h1 style="font-size:40px;text-align:center;font-family: 'Rancho', cursive;">Login</h1>
<form method = "post">
  <div class="login">
    <div class="imgcontainer">
    <img src="https://cdn-icons-png.flaticon.com/512/8853/8853005.png" alt="Avatar" class="avatar">
    </div>

    <center>
    <p>
        <input name="EmployeeID" placeholder="Employee ID"/>
    </p>
    <p>
        <label for="Password">Password</label>
        <input type="password" name="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
    </p>
    <p>
        <button type="submit">Submit</button>
    </p>
  </div>
    </center>        
</form>
