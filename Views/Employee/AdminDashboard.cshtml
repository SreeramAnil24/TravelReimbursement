<style>
  .boxfunc{
  padding: 5px 5px 5px 5px;
  border-radius: 10px;
  height: 49px;
  width: 22%;
  margin: 5px 1% 5px 1%;
  float: center;
  position: center;
  transition: height 0.5s;
  -webkit-transition: height 0.5s;
  text-align: center;
  overflow: hidden;
  transition: 1.5s;
  box-shadow: 20px 20px 30px black;  

}

.boxfunc:hover {
  @* background-color:rgb(82, 21, 139);
  cursor: pointer;
  -webkit-transition: background-color 2s ease-out;
  -moz-transition: background-color 2s ease-out;
  -o-transition: background-color 2s ease-out;
  transition: background-color 2s ease-out; *@
  height: 90px;
  width: 25vw;
}



</style>
<head>
<link rel="stylesheet" href="Views\Employee\slide.css">
</head>
<!DOCTYPE html>
@{
    Layout = "~/Views/Shared/_Layoutnoicons.cshtml";
}
<html>
<title>Admin Dashboard</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>


<div class="w3-sidebar w3-bar-block w3-dark-grey w3-animate-left" style="display:none" id="mySidebar">
  <button class="w3-bar-item w3-button w3-large"
  onclick="w3_close()">Close &times;</button>
  <a asp-controller="Employee" asp-action="EmployeeDetails" class="w3-bar-item w3-button">View Employees</a>
  <a asp-controller="Employee" asp-action="ApproveReimbursements" class="w3-bar-item w3-button">Approve Reimbursements</a>
  <a href="#" class="w3-bar-item w3-button">Remove an employee</a>
</div>

<div>
  <button class="w3-button w3-white w3-xxlarge" onclick="w3_open()">&#9776;</button>
  <div class="w3-container">
    <h1 style="text-align: center;">Admin Dashboard</h1>
   
  </div>
</div>

<div class="row">
        <div class="boxfunc" >
          <h4 style="color:white; font-family: 'Gloock', serif;"><img src="https://cdn-icons-png.flaticon.com/512/912/912318.png" width="40" height="40">View Employees</h4>
          <p style="color:white">Show all employees who have applied for reimbursements.</p> 
        </div>

        <div class="boxfunc">
          <h4 style="color:white; font-family: 'Gloock', serif;"><img src="https://cdn-icons-png.flaticon.com/512/4603/4603456.png" width="40" height="40">Approve Reimbursements</h4>
          <p style="color:white">Allow/ Deny Reimbursements</p> 
        </div>

        <div class="boxfunc">
          <h4 style="color:white; font-family: 'Gloock', serif;"><img src="https://cdn-icons-png.flaticon.com/512/7516/7516532.png" width="40" height="40">Remove an Employee</h4>
          <p style="color:white">Remove an employee from the portal</p> 
        </div>
      </div>



<script>
function w3_open() {
    document.getElementById("mySidebar").style.display = "block";
}
function w3_close() {
    document.getElementById("mySidebar").style.display = "none";
}
</script>
     
</body>
</html> 
