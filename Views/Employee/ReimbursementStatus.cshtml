@using System.Data;
@model System.Data.DataTable;
<style>
    .boxfunc{
 background-color: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10px);
  border-radius: 10px;
  padding: 20px;
  margin: 20px;
  box-shadow: 20px 20px 30px rgba(0, 0, 0, 0.2); 
}

h3{
    text-align: center;
}
</style>
@{
    Layout = "~/Views/Shared/_Layoutwithonlylogo.cshtml";
}

<body>
   
    </div>
    <br>
    <br>
    <div class="boxfunc">
        <table style="width:100%" border=2>
            <br>
                    <h3> Employee Reimbursement Request:</h3>
                    <thead>
                        <tr>
                            <th> Expense No &emsp; </th>
                            <th> Employee ID &emsp; </th>
                            <th> Expense Name &emsp; </th>
                            <th> Amount &emsp; </th>
                            <th> Currency &emsp; </th>
                            <th> Date </th>
                            <th> Expense Proof </th>
                            <th> Approval </th>

                        </tr>
                    </thead>
                    <tbody>
                        @{

                            foreach (DataRow datarow in Model.Rows)
                            {
                                
                                <tr>
                                    <td>@datarow[0] &emsp; </td>
                                    <td>@datarow[1] &emsp; </td>
                                    <td>@datarow[2] &emsp; </td>
                                    <td>@datarow[4] &emsp; </td>
                                    <td>@datarow[5] &emsp; </td>
                                    <td>@datarow[3] &emsp; </td>
                                    @{
                                        string imageBase64Data=Convert.ToBase64String((byte[])datarow[6]);
                                        string imageDataURL=string.Format("data:image/jpg;base64,{0}", imageBase64Data);
                                        <td><img src=@imageDataURL width="50px" height="50px"></td>
                                    }
                                    <td>@datarow[7] &emsp; </td>
                                </tr>
                            }
    
                        }
                        </tbody>
                        
                </table>            
    </div>
    <div class="container">
        <a button asp-controller="Employee" asp-action="Dashboard" type="submit">Go back</button></a>    
    </div>

    
</body>