<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Gloock&display=swap" rel="stylesheet">


<!DOCTYPE html>
@model IEnumerable<object>
<html lang="en">
@{
    Layout = "~/Views/Shared/_Layoutwithonlylogo.cshtml";
}
<head>

  <style>



  .boxfunc{
  padding: 5px 5px 5px 5px;
  border-radius: 10px;
  height: 55px;
  background-color: rgb(66, 65, 66);
  margin-left: 50px;

  width: 35%;
  margin: 5px 1% 5px 1%;
  float: center;
  position: center;
  transition: height 0.5s;
  -webkit-transition: height 0.5s;
  text-align: center;
  overflow: hidden;
  transition: 1.5s;
  box-shadow: 20px 20px 30px rgb(6, 80, 67);  

}

.boxfunc2{
    width: 1000px;
    height: 500px;
    background-color: rgb(39, 36, 38);
    border-radius: 1em;
    @* align-items: center; *@
    flex-direction: row;
    flex-wrap: wrap;
    @* justify-content: center; *@
    padding-left: 12em;
    margin-left: auto;
    margin-right: auto;
    box-shadow: 20px 20px 30px black;  

}


.boxfunc:hover {
  @* background-color:rgb(82, 21, 139);
  cursor: pointer;
  -webkit-transition: background-color 2s ease-out;
  -moz-transition: background-color 2s ease-out;
  -o-transition: background-color 2s ease-out;
  transition: background-color 2s ease-out; *@
  height: 110px;
  width: 23vw;
}


  </style>
</head>
<body>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="lastlogin">@TempData["Time"]</div>
<div>
  <div class="w3-sidebar w3-bar-block w3-black w3-xxlarge" style="width:65px;left:0;position: fixed;">
      <a asp-controller="Employee" asp-action="Reimbursement" class="w3-bar-item w3-button"><img src="https://cdn-icons-png.flaticon.com/512/9484/9484175.png" title="Add a new Expense" width="40" height="40"></a>
      <a asp-controller="Employee" asp-action="Destination" class="w3-bar-item w3-button"><img src="https://cdn-icons-png.flaticon.com/512/8240/8240469.png" title="Add a new Travel" width="40" height="40"></a>  
      <a href="https://mail.aspiresystems.com/src/login.php" class="w3-bar-item w3-button"><img src="https://cdn-icons-png.flaticon.com/512/9644/9644981.png" title="Send a mail to the Admin" width="40" height="40"></a> 
      <a asp-controller="Employee" asp-action="toLogin" class="w3-bar-item w3-button"><img src="https://cdn-icons-png.flaticon.com/512/5631/5631841.png" title="Log out from the portal" width="40" height="40"></a> 
      
      @* <a href="#" class="w3-bar-item w3-button"><i class="fa fa-trash"></i></a>  *@
  </div>
<div class="boxfunc2">

    <div class="col-sm-9">
      <div>
        <center>
        <h2>@ViewBag.message 's Dashboard</h2>
<h4 style="color:white; font-family: 'Gloock', serif; font-size:30px; text-align:center"> @ViewBag.message's User Dashboard:</h4><p style="color:white;">Check your Travel Reimbursement status here.</p>
        </center>
      </div>
      <div class="row">
        <div class="boxfunc" >
          <h4 style="color:white; font-family: 'Gloock', serif;"><img src="https://cdn-icons-png.flaticon.com/512/7126/7126401.png" width="40" height="40">Destination:</h4>
          <p style="color:white">@Model.ElementAt(0)</p> 
        </div>

        <div class="boxfunc">
          <h4 style="color:white; font-family: 'Gloock', serif;"><img src="https://cdn-icons-png.flaticon.com/512/1243/1243113.png" width="40" height="40">Travel Medium:</h4>
          <p style="color:white">@Model.ElementAt(1)</p> 
        </div>

        <div class="boxfunc">
          <h4 style="color:white; font-family: 'Gloock', serif;"><img src="https://cdn-icons-png.flaticon.com/512/661/661553.png" width="40" height="40">Date of Travel:</h4>
          <p style="color:white">@Model.ElementAt(2)</p> 
        </div>
      </div>


      <div class="row" >
          <div class="boxfunc">       
            <h4 style="color:white; font-family: 'Gloock', serif;"><img src="https://cdn-icons-png.flaticon.com/512/1122/1122163.png" width="40" height="40">Reimbursements applied:</h4>
            <p style="color:white">@Model.ElementAt(3)</p> 
          </div>

          <div class="boxfunc">  
            <h4 style="color:white; font-family: 'Gloock', serif;"><img src="https://cdn-icons-png.flaticon.com/512/8187/8187443.png" width="40" height="40">Reimbursements approved:</h4>
            <p style="color:white">@Model.ElementAt(4)</p> 
          </div>
      
          <div class="boxfunc">  
            <h4 style="color:white; font-family: 'Gloock', serif;"><img src="https://cdn-icons-png.flaticon.com/512/8727/8727689.png" width="40" height="40">Reimbursements Rejected:</h4>
            <p style="color:white">@Model.ElementAt(5)</p> 
          </div>

          <div class="boxfunc" >
          <a asp-controller="Employee" asp-action="ReimbursementStatus"><h4 style="color:white;"><img src="https://cdn-icons-png.flaticon.com/512/9264/9264010.png" width="40" height="40">Status</h4></a>
          <p style="color:white">View your reimbursement status</p> 
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</body>
</html>
