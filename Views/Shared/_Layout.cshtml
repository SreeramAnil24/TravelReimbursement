<!DOCTYPE html>
<html lang="en">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=ABeeZee&family=Cookie&family=Shantell+Sans:ital,wght@1,300&display=swap" rel="stylesheet"> 
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel Reimbursement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webapp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Employee" asp-action="toCreate"><!--<p style="font-family:'Cookie', cursive;font-size:25px">TravelGuide</p>--><img src="https://cdn-icons-png.flaticon.com/512/9610/9610723.png" width="40" height="40"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy" style ="font-family: 'Poppins', sans-serif; font-size:18px" >Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Employee" asp-action="hasIndex">Details</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-white"  asp-area="" asp-controller="employee" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="employee" asp-action="NewTravel">New Travel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="employee" asp-action="Reimbursement">New Reimbursement</a>
                        </li>
                        <li class="nav-item nav-right"  >
                            <a class="nav-link text-white" asp-area="" asp-controller="Employee" asp-action="toCreate" ><img src="https://cdn-icons-png.flaticon.com/512/8750/8750952.png" width="40" height="40"></a>
                        </li>
                        <li class="nav-item"  >
                            <a class="nav-link text-white" asp-area="" asp-controller="Employee" asp-action="toLogin" ><img src="https://cdn-icons-png.flaticon.com/512/9546/9546423.png" width="38" height="38"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container"></div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
